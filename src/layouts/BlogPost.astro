---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<Layout title={title} description={description}>
  <article class="blog-post">
    <div class="blog-hero">
      {heroImage && (
        <div class="hero-image">
          <img src={heroImage} alt={title} />
          <div class="hero-overlay"></div>
        </div>
      )}
      <div class="container">
        <div class="hero-content">
          <div class="post-meta animate-slide-up">
            <FormattedDate date={pubDate} />
            {updatedDate && (
              <span class="updated">
                Updated on <FormattedDate date={updatedDate} />
              </span>
            )}
          </div>
          <h1 class="gradient-text animate-slide-up" style="animation-delay: 0.1s">{title}</h1>
          <p class="description animate-slide-up" style="animation-delay: 0.2s">{description}</p>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content-wrapper">
        <div class="prose animate-slide-up" style="animation-delay: 0.3s">
          <slot />
        </div>
        
        <div class="post-footer">
          <div class="share-section">
            <h3>Share this article</h3>
            <div class="share-buttons">
              <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`} target="_blank" class="share-btn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                Twitter
              </a>
              <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`} target="_blank" class="share-btn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                  <rect x="2" y="9" width="4" height="12"/>
                  <circle cx="4" cy="4" r="2"/>
                </svg>
                LinkedIn
              </a>
            </div>
          </div>
          
          <div class="back-to-blog">
            <a href="/blog" class="btn btn-outline">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              Back to Blog
            </a>
          </div>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    padding-top: 72px;
  }

  .blog-hero {
    position: relative;
    padding: 80px 0 60px;
    background: radial-gradient(ellipse at top, rgba(0, 122, 255, 0.1), transparent 40%);
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
    filter: blur(5px);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.9));
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-bottom: 24px;
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .updated {
    padding-left: 16px;
    border-left: 1px solid var(--border);
  }

  .blog-hero h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: 16px;
    line-height: 1.1;
  }

  .description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
    padding: 60px 24px;
  }

  .prose {
    color: var(--text-secondary);
    line-height: 1.8;
    font-size: 1.125rem;
  }

  .prose :global(h2) {
    color: var(--text-primary);
    font-size: 2rem;
    margin: 48px 0 24px;
    font-weight: 700;
  }

  .prose :global(h3) {
    color: var(--text-primary);
    font-size: 1.5rem;
    margin: 32px 0 16px;
    font-weight: 600;
  }

  .prose :global(h4) {
    color: var(--text-primary);
    font-size: 1.25rem;
    margin: 24px 0 12px;
    font-weight: 600;
  }

  .prose :global(p) {
    margin-bottom: 24px;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 24px 0;
    padding-left: 24px;
  }

  .prose :global(li) {
    margin-bottom: 8px;
  }

  .prose :global(code) {
    background: var(--surface);
    color: var(--primary);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .prose :global(pre) {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 16px;
    overflow-x: auto;
    margin: 24px 0;
  }

  .prose :global(pre code) {
    background: none;
    color: var(--text-primary);
    padding: 0;
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--primary);
    padding-left: 24px;
    margin: 24px 0;
    font-style: italic;
    color: var(--text-secondary);
  }

  .prose :global(a) {
    color: var(--primary);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .prose :global(a:hover) {
    color: var(--primary-dark);
  }

  .prose :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .post-footer {
    margin-top: 80px;
    padding-top: 40px;
    border-top: 1px solid var(--border);
  }

  .share-section {
    margin-bottom: 40px;
  }

  .share-section h3 {
    font-size: 1.25rem;
    margin-bottom: 16px;
  }

  .share-buttons {
    display: flex;
    gap: 12px;
  }

  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    color: var(--text-primary);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .share-btn:hover {
    background: var(--surface-hover);
    transform: translateY(-2px);
  }

  .back-to-blog {
    text-align: center;
  }

  @media (max-width: 768px) {
    .content-wrapper {
      padding: 40px 16px;
    }

    .prose {
      font-size: 1rem;
    }
  }
</style>
