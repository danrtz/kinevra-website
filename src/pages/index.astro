---
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="blur-bg blur-bg-1"></div>
    <div class="blur-bg blur-bg-2"></div>
    <div class="blur-bg blur-bg-3"></div>
    
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge animate-slide-in">
          <span class="badge-dot"></span>
          <span>Next-Gen SAP Solutions</span>
        </div>
        
        <h1 class="hero-title animate-slide-up">
          Transform Your Enterprise with <span class="gradient-text">Intelligent Integration</span>
        </h1>
        
        <p class="hero-subtitle animate-slide-up" style="animation-delay: 0.1s;">
          Expert SAP integration and Business Technology Platform services that propel your business into the future. 
          Seamless cloud transformation, powerful automation, and enterprise-grade solutions.
        </p>
        
        <div class="hero-actions animate-slide-up" style="animation-delay: 0.2s;">
          <a href="#contact" class="btn btn-primary">Start Your Journey</a>
          <a href="#services" class="btn btn-outline">Explore Solutions</a>
        </div>
        
        <div class="hero-stats animate-slide-up" style="animation-delay: 0.3s;">
          <div class="stat">
            <div class="stat-number gradient-text">100%</div>
            <div class="stat-label">Cloud Native</div>
          </div>
          <div class="stat">
            <div class="stat-number gradient-text">24/7</div>
            <div class="stat-label">Support</div>
          </div>
          <div class="stat">
            <div class="stat-number gradient-text">âˆž</div>
            <div class="stat-label">Scalability</div>
          </div>
        </div>
      </div>
      
      <div class="hero-visual">
        <div class="floating-card animate-float">
          <div class="card-icon">âš¡</div>
          <div class="card-title">Lightning Fast</div>
          <div class="card-desc">Optimized Performance</div>
        </div>
        <div class="floating-card animate-float" style="animation-delay: 1s;">
          <div class="card-icon">ðŸ”’</div>
          <div class="card-title">Enterprise Secure</div>
          <div class="card-desc">Bank-Grade Security</div>
        </div>
        <div class="floating-card animate-float" style="animation-delay: 2s;">
          <div class="card-icon">ðŸš€</div>
          <div class="card-title">Future Ready</div>
          <div class="card-desc">AI-Powered Solutions</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="services">
    <div class="container">
      <div class="section-header">
        <h2 class="gradient-text">Our Expertise</h2>
        <p>Comprehensive SAP and cloud solutions tailored to your enterprise needs</p>
      </div>
      
      <div class="grid grid-3">
        <div class="service-card glass-card">
          <div class="service-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7L12 12L22 7L12 2Z"/>
              <path d="M2 17L12 22L22 17"/>
              <path d="M2 12L12 17L22 12"/>
            </svg>
          </div>
          <h3>SAP Integration</h3>
          <p>Seamless integration of SAP systems with your existing infrastructure. Connect S/4HANA, ECC, and cloud solutions effortlessly.</p>
          <ul class="service-features">
            <li>API Management</li>
            <li>Data Migration</li>
            <li>Process Automation</li>
            <li>Real-time Synchronization</li>
          </ul>
        </div>
        
        <div class="service-card glass-card">
          <div class="service-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M2 3H8C9.06087 3 10.0783 3.42143 10.8284 4.17157C11.5786 4.92172 12 5.93913 12 7V21C12 20.2044 11.6839 19.4413 11.1213 18.8787C10.5587 18.3161 9.79565 18 9 18H2V3Z"/>
              <path d="M22 3H16C14.9391 3 13.9217 3.42143 13.1716 4.17157C12.4214 4.92172 12 5.93913 12 7V21C12 20.2044 12.3161 19.4413 12.8787 18.8787C13.4413 18.3161 14.2044 18 15 18H22V3Z"/>
            </svg>
          </div>
          <h3>BTP Solutions</h3>
          <p>Leverage SAP Business Technology Platform for innovation. Build, integrate, and extend applications in the cloud.</p>
          <ul class="service-features">
            <li>Cloud Foundry Apps</li>
            <li>Integration Suite</li>
            <li>Extension Suite</li>
            <li>Analytics Cloud</li>
          </ul>
        </div>
        
        <div class="service-card glass-card">
          <div class="service-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M8 14S9.5 16 12 16S16 14 16 14"/>
              <line x1="9" y1="9" x2="9.01" y2="9"/>
              <line x1="15" y1="9" x2="15.01" y2="9"/>
            </svg>
          </div>
          <h3>Consulting & Support</h3>
          <p>Expert guidance for your digital transformation journey. From strategy to implementation, we're with you every step.</p>
          <ul class="service-features">
            <li>Architecture Design</li>
            <li>Best Practices</li>
            <li>Performance Optimization</li>
            <li>24/7 Support</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Technology Stack -->
  <section class="tech-stack">
    <div class="container">
      <div class="section-header">
        <h2 class="gradient-text">Technology Stack</h2>
        <p>Cutting-edge tools and platforms we work with</p>
      </div>
      
      <div class="tech-grid">
        <div class="tech-item">
          <div class="tech-logo">SAP</div>
          <span>S/4HANA</span>
        </div>
        <div class="tech-item">
          <div class="tech-logo">BTP</div>
          <span>Business Technology Platform</span>
        </div>
        <div class="tech-item">
          <div class="tech-logo">CF</div>
          <span>Cloud Foundry</span>
        </div>
        <div class="tech-item">
          <div class="tech-logo">K8s</div>
          <span>Kubernetes</span>
        </div>
        <div class="tech-item">
          <div class="tech-logo">API</div>
          <span>REST & OData</span>
        </div>
        <div class="tech-item">
          <div class="tech-logo">AI</div>
          <span>Machine Learning</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="why-choose">
    <div class="container">
      <div class="section-header">
        <h2 class="gradient-text">Why Choose Kinevra</h2>
        <p>Dedicated expertise meets innovative solutions</p>
      </div>
      
      <div class="grid grid-2">
        <div class="why-card">
          <div class="why-number">01</div>
          <h3>Personalized Approach</h3>
          <p>As a boutique consultancy, every project receives dedicated attention and customized solutions tailored to your specific needs.</p>
        </div>
        
        <div class="why-card">
          <div class="why-number">02</div>
          <h3>Deep SAP Expertise</h3>
          <p>Specialized knowledge in SAP ecosystem, from core ERP to cutting-edge BTP solutions and cloud transformations.</p>
        </div>
        
        <div class="why-card">
          <div class="why-number">03</div>
          <h3>Agile & Responsive</h3>
          <p>Quick decision-making and flexible engagement models. No bureaucracy, just efficient problem-solving.</p>
        </div>
        
        <div class="why-card">
          <div class="why-number">04</div>
          <h3>Future-Focused</h3>
          <p>Stay ahead with modern architectures, cloud-native solutions, and emerging technologies integrated into your SAP landscape.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="contact" class="cta">
    <div class="container">
      <div class="cta-content glass-card">
        <h2 class="gradient-text">Ready to Transform Your Business?</h2>
        <p>Let's discuss how Kinevra can help you leverage SAP and cloud technologies for competitive advantage.</p>
        
        <div class="cta-actions">
          <a href="mailto:daniel@kinevra.com" class="btn btn-primary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline-block; margin-right: 8px;">
              <path d="M4 4H20C21.1 4 22 4.9 22 6V18C22 19.1 21.1 20 20 20H4C2.9 20 2 19.1 2 18V6C2 4.9 2.9 4 4 4Z"/>
              <path d="M22 6L12 13L2 6"/>
            </svg>
            Get in Touch
          </a>
          <div class="contact-info">
            <span>Or email directly:</span>
            <a href="mailto:daniel@kinevra.com" class="email-link">daniel@kinevra.com</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  main {
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0;
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding: 120px 0 80px;
    background: radial-gradient(ellipse at top, rgba(0, 122, 255, 0.1), transparent 40%),
                radial-gradient(ellipse at bottom right, rgba(88, 86, 214, 0.08), transparent 40%);
  }

  .hero-content {
    max-width: 800px;
    margin-bottom: 60px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 100px;
    margin-bottom: 24px;
    backdrop-filter: blur(10px);
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: glow 2s ease-in-out infinite;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -0.03em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 40px;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    margin-bottom: 60px;
  }

  .hero-stats {
    display: flex;
    gap: 48px;
    padding-top: 40px;
    border-top: 1px solid var(--border);
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    letter-spacing: -0.02em;
  }

  .stat-label {
    color: var(--text-secondary);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 4px;
  }

  .hero-visual {
    position: absolute;
    right: 10%;
    top: 50%;
    transform: translateY(-50%);
    display: grid;
    gap: 24px;
    z-index: 1;
  }

  .floating-card {
    background: var(--surface);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 20px;
    min-width: 200px;
    box-shadow: 0 8px 32px rgba(0, 122, 255, 0.1);
    transition: all 0.3s ease;
  }

  .floating-card:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 40px rgba(0, 122, 255, 0.2);
  }

  .card-icon {
    font-size: 2rem;
    margin-bottom: 8px;
  }

  .card-title {
    font-weight: 600;
    margin-bottom: 4px;
  }

  .card-desc {
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  /* Services Section */
  .services {
    background: rgba(255, 255, 255, 0.02);
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    margin-bottom: 16px;
  }

  .service-card {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: var(--gradient-main);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .service-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .service-card:hover .service-icon::before {
    left: 100%;
  }

  .service-card h3 {
    font-size: 1.5rem;
    margin-bottom: 16px;
  }

  .service-features {
    list-style: none;
    margin-top: auto;
    padding-top: 24px;
  }

  .service-features li {
    padding: 8px 0;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .service-features li::before {
    content: 'âœ“';
    color: var(--success);
    font-weight: bold;
  }

  /* Tech Stack */
  .tech-stack {
    padding: 80px 0;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 24px;
    margin-top: 48px;
  }

  .tech-item {
    text-align: center;
    padding: 24px;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .tech-item:hover {
    transform: translateY(-4px);
    background: var(--surface-hover);
    border-color: var(--primary);
  }

  .tech-logo {
    font-size: 2rem;
    font-weight: 900;
    background: var(--gradient-main);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
  }

  .tech-item span {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  /* Why Choose */
  .why-choose {
    background: rgba(255, 255, 255, 0.02);
    padding: 100px 0;
  }

  .why-card {
    padding: 32px;
    position: relative;
  }

  .why-number {
    font-size: 4rem;
    font-weight: 900;
    background: var(--gradient-main);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0.3;
    position: absolute;
    top: 0;
    left: 32px;
  }

  .why-card h3 {
    margin-top: 32px;
    margin-bottom: 16px;
  }

  /* CTA Section */
  .cta {
    padding: 100px 0;
    position: relative;
  }

  .cta-content {
    text-align: center;
    padding: 60px;
    background: var(--gradient-main);
    position: relative;
    overflow: hidden;
  }

  .cta-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1;
  }

  .cta-content > * {
    position: relative;
    z-index: 2;
  }

  .cta-content h2 {
    margin-bottom: 16px;
  }

  .cta-content p {
    max-width: 600px;
    margin: 0 auto 32px;
    color: rgba(255, 255, 255, 0.9);
  }

  .cta-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .contact-info {
    display: flex;
    align-items: center;
    gap: 12px;
    color: rgba(255, 255, 255, 0.8);
  }

  .email-link {
    color: white;
    font-weight: 600;
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-visual {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .hero-stats {
      gap: 24px;
    }

    .stat-number {
      font-size: 1.75rem;
    }

    .cta-content {
      padding: 40px 24px;
    }

    .tech-grid {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    }
  }
</style>
