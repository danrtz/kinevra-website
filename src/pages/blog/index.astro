---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Blog - Kinevra" description="Expert insights on SAP integration, BTP, and enterprise cloud solutions">
  <section class="blog-hero">
    <div class="blur-bg blur-bg-1"></div>
    <div class="blur-bg blur-bg-2"></div>
    
    <div class="container">
      <div class="hero-content">
        <h1 class="gradient-text animate-slide-up">Blog</h1>
        <p class="hero-subtitle animate-slide-up" style="animation-delay: 0.1s;">
          Actual SAP solutions to real problems I've solved
        </p>
      </div>
    </div>
  </section>

  <section class="blog-grid">
    <div class="container">
      <div class="posts-grid">
        {posts.map((post, index) => (
          <article class={`blog-card glass-card animate-slide-up ${index === 0 ? 'featured' : ''}`} style={`animation-delay: ${0.1 * (index + 1)}s`}>
            <a href={`/blog/${post.id}/`} class="card-link">
              <div class="card-image">
                <img src={post.data.heroImage} alt={post.data.title} />
                <div class="card-overlay"></div>
              </div>
              <div class="card-content">
                <div class="card-meta">
                  <FormattedDate date={post.data.pubDate} />
                  {index === 0 && <span class="badge">Latest</span>}
                </div>
                <h2 class="card-title">{post.data.title}</h2>
                <p class="card-description">{post.data.description}</p>
                <div class="card-footer">
                  <span class="read-more">
                    Read Article 
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .blog-hero {
    padding: 160px 0 80px;
    position: relative;
    overflow: hidden;
    text-align: center;
    background: radial-gradient(ellipse at top, rgba(0, 122, 255, 0.1), transparent 40%);
  }

  .hero-content h1 {
    font-size: clamp(3rem, 7vw, 4.5rem);
    margin-bottom: 24px;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-grid {
    padding: 80px 0 100px;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
  }

  .blog-card {
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
  }

  .blog-card.featured {
    grid-column: 1 / -1;
  }

  .blog-card.featured .card-link {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 32px;
    align-items: center;
  }

  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .card-image {
    position: relative;
    width: 100%;
    height: 240px;
    overflow: hidden;
    border-radius: 16px;
    margin-bottom: 24px;
  }

  .blog-card.featured .card-image {
    height: 400px;
    margin-bottom: 0;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.3));
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .blog-card:hover .card-image img {
    transform: scale(1.05);
  }

  .blog-card:hover .card-overlay {
    opacity: 1;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding: 0;
  }

  .blog-card.featured .card-content {
    padding: 24px;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    color: var(--text-tertiary);
    font-size: 0.875rem;
  }

  .badge {
    background: var(--gradient-main);
    color: white;
    padding: 4px 12px;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 12px;
    line-height: 1.3;
    color: var(--text-primary);
    transition: color 0.3s ease;
  }

  .blog-card.featured .card-title {
    font-size: 2rem;
  }

  .blog-card:hover .card-title {
    background: var(--gradient-main);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .card-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 20px;
    flex-grow: 1;
  }

  .card-footer {
    margin-top: auto;
    padding-top: 16px;
    border-top: 1px solid var(--border);
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--primary);
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .read-more svg {
    transition: transform 0.3s ease;
  }

  .blog-card:hover .read-more {
    gap: 12px;
  }

  .blog-card:hover .read-more svg {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .blog-card.featured .card-link {
      grid-template-columns: 1fr;
    }

    .blog-card.featured .card-image {
      height: 300px;
      margin-bottom: 24px;
    }

    .blog-card.featured .card-content {
      padding: 0;
    }
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .blog-card.featured {
      grid-column: 1;
    }
  }
</style>
